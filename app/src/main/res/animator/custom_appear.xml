<?xml version="1.0" encoding="utf-8"?>

<set xmlns:android="http://schemas.android.com/apk/res/android">
    <objectAnimator
        android:propertyName="alpha"
        android:valueFrom="0.0"
        android:valueTo="1.0"
        android:duration="@integer/appear_fade_in" />

    <set android:repeatCount="2"
         android:repeatMode="restart">
        <objectAnimator
            android:propertyName="rotationY"
            android:valueFrom="0"
            android:valueTo="180"
            android:duration="@integer/appear_rot1" />

        <objectAnimator
            android:propertyName="rotationY"
            android:startOffset="@integer/appear_rot1"
            android:valueFrom="-180"
            android:valueTo="0"
            android:duration="@integer/appear_rot1" />

    </set>
</set>
